<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#E0F0FF"> <!-- Cor de fundo azul claro -->

    <!-- Símbolo de Laço -->
    <ImageView
        android:id="@+id/logo2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="left"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="Símbolo de Laço"
        android:src="@drawable/autismo_logo" /> <!-- Imagem do laço -->

    <!-- Logo do App -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:contentDescription="Logo do App"
        android:src="@drawable/logo_teiatech" /> <!-- Imagem do logo -->

    <!-- Campo de E-mail -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginBottom="16dp"
        android:padding="15dp"
        android:text="LOGIN"
        android:textSize="20dp" />

    <EditText

        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:drawableStart="@android:drawable/ic_menu_send"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:background="@android:drawable/edit_text" />

    <!-- Campo de Senha -->
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:inputType="textPassword"
        android:drawableStart="@android:drawable/ic_lock_idle_lock"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:background="@android:drawable/edit_text" />

    <!-- Botão de Login -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#73B7FF"
        android:padding="12dp"
        android:text="Entrar"
        android:textColor="@android:color/white" />

    <!-- Link de Registro -->
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Não tem uma conta? Cadastre-se aqui"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"/>

</LinearLayout>

